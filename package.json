{
  "name": "gherkintablealign",
  "displayName": "Gherkin Table Align",
  "description": "A table formatter for gherkin tables.",
  "version": "1.1.0",
  "publisher": "AlanCole",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/alan-cole/vs-code-table-align"
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:alan-cole.gherkinTableAlign"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "alan-cole.gherkinTableAlign",
        "title": "Gherkin Table Align"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Gherkin Table Align",
      "properties": {
        "gherkinTableAlign.allowEmptyRow": {
          "type": "boolean",
          "default": false,
          "description": "Allow empty rows in tables."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
